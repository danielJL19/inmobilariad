<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%# producto %>
    <article>
      <h1> <%= @product.name %> </h1>
      <div class="grid grid-cols-6 gap-2">

          <div class="col-span-5">
              <div class="mb-3">
                  <%= image_tag @product.photo, class:"h-auto rounded-lg max-w-full" if @product.photo.attached? %>
              </div>
              <% unless @product.images.empty? %>
                <div class="grid grid-cols-4 gap-4 justify-center">
                    <% @product.images.each do |product|%>

                      <%= image_tag(product, class:"h-auto rounded-lg") %>
                    
                    <% end %>

                    
                </div>
              <% end %>
     
          </div>

          <div class="rounded-lg border p-5">
            <h4 class="text-center">Habitaciones: <%= @product.room %></h4>
            
          </div>

      </div>
    </article>
    <%= link_to 'Edit this product', edit_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this product', product_path(@product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to products', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <div>
    <%= @product.body %>
  
  </div>
</div>
